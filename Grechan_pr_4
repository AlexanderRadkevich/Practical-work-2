const SIZE: usize = 5; // Розмір ромба (можна змінювати для налаштування розміру)

fn main() {
    // Виведення результату
    let mut buffer = String::new();

    // Верхня частина ромба
    for i in 0..SIZE {
        // Додаємо пробіли перед зірочками
        buffer.push_str(&" ".repeat(SIZE - i - 1));
        // Додаємо зірочки і пробіли між ними
        buffer.push_str(&"*".repeat(i * 2 + 1));
        // Додаємо новий рядок
        buffer.push('\n');
    }

    // Нижня частина ромба
    for i in (0..SIZE - 1).rev() {
        // Додаємо пробіли перед зірочками
        buffer.push_str(&" ".repeat(SIZE - i - 1));
        // Додаємо зірочки і пробіли між ними
        buffer.push_str(&"*".repeat(i * 2 + 1));
        // Додаємо рядок
        buffer.push('\n');
    }

    // Виводимо ромб в консоль за допомогою одного print! та println!
    print!("{}", buffer);
}
